{
  "name": "@dike/communication",
  "version": "0.0.43",
  "private": true,
  "author": "Tommaso Centurioni",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "init": "yarn init:dokcer",
    "init:docker": "cp .env.docker .env",
    "init:example": "cp .env.example .env",
    "clean": "rm -rf dist node_modules tsconfig.build.tsbuildinfo",
    "build": "tsc -p tsconfig.build.json",
    "build:force": "rm -rf dist && nest build",
    "release:major": "node ../../scripts/release.js major $(pwd)",
    "release:minor": "node ../../scripts/release.js minor $(pwd)",
    "release:patch": "node ../../scripts/release.js patch $(pwd)",
    "release": "node ../../scripts/release.js patch $(pwd)",
    "release:custom": "node ../../scripts/release.js custom $(pwd)",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "yarn docker-compose:up $(docker-compose -f ../../../docker-compose.yaml config --services | grep -v api-gateway) && jest --config ./test/jest-e2e.json",
    "test:all": "yarn test:e2e && yarn test",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "library-build:test": "yarn clean && yarn && yarn build && yarn test",
    "library-build": "yarn clean && yarn && yarn build",
    "b": "yarn library-build"
  },
  "dependencies": {
    "@dike/common": "*",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/swagger": "^11.2.3",
    "axios": "^1.13.3",
    "class-validator": "^0.14.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "jwks-rsa": "^3.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@dike/contracts": "*",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.10",
    "jest": "^30.0.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
