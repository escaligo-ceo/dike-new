{
  "extends": "../../../tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    // "rootDir": "./src",
    "rootDir": "./",
    "outDir": "./dist",
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es2019",
      "dom"
    ],
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "src/migrations/*.ts",
    // "src/**/*.json",
    // "src/**/*.d.ts",
    // "src/**/*.js"
  ]
}