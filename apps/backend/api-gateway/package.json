{
  "name": "@dike/api-gateway",
  "version": "0.2.47",
  "description": "API gateway for Dike clients",
  "main": "src/main.ts",
  "author": "Tommaso Centurioni",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "init": "yarn init:dokcer",
    "init:docker": "cp .env.docker .env",
    "init:example": "cp .env.example .env",
    "build": "tsc -p tsconfig.build.json",
    "dev": "npx ts-node-dev --respawn --transpile-only --poll --interval 1000 src/main.ts --host 0.0.0.0",    "clean": "rm -rf dist node_modules tsconfig.build.tsbuildinfo",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:all": "yarn test:e2e && yarn test",
    "release:major": "node ../../../scripts/release.js major $(pwd)",
    "release:minor": "node ../../../scripts/release.js minor $(pwd)",
    "release:patch": "node ../../../scripts/release.js patch $(pwd)",
    "release": "node ../../../scripts/release.js patch $(pwd)",
    "release:custom": "node ../../../scripts/releaseCustom.js $(pwd)",
    "swagger": "ts-node ../../../scripts/swagger.ts",
    "service-restart": "yarn clean && yarn && yarn build && yarn start",
    "service-start": "yarn start",
    "rebuild": "docker compose build api-gateway --no-cache",
    "restart": "docker compose up -d api-gateway",
    "b": "yarn clean && yarn && yarn rebuild",
    "r": "yarn service-restart",
    "l": "yarn start",
    "routes": "node ../../../scripts/scan-routes.js --show-method",
    "log": "docker compose logs -f api-gateway"
  },
  "dependencies": {
    "@dike/common": "*",
    "@dike/communication": "*",
    "@dike/contracts": "*",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-express": "^11.1.9",
    "axios": "^1.10.0",
    "form-data": "^4.0.5",
    "jwks-rsa": "^3.2.0",
    "multer": "^2.0.2",
    "nunjucks": "^3.2.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.7",
    "@types/nunjucks": "^3",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "express": "^5.1.0",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-morph": "^25.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.20.0",
    "webpack": "^5.99.9"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
