{
  "name": "@dike/auth-service",
  "version": "0.1.45",
  "description": "Authorization Service",
  "author": "Tommaso Centurioni",
  "main": "src/main.ts",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "init": "yarn init:dokcer",
    "init:docker": "cp .env.docker .env",
    "init:example": "cp .env.example .env",
    "build": "tsc -p tsconfig.build.json",
    "dev": "ts-node-dev --respawn --transpile-only --poll src/main.ts",
    "clean": "rm -rf dist node_modules tsconfig.build.tsbuildinfo",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "yarn docker-compose:up && nest start --watch",
    "start:docker": "yarn docker-compose:up && yarn start:dev",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "yarn docker-compose:up $(docker-compose -f ../../../docker-compose.yaml config --services | grep -v auth-service) && jest --config ./test/jest-e2e.json",
    "test:all": "yarn test:e2e && yarn test",
    "release:major": "node ../../../scripts/release.js major $(pwd)",
    "release:minor": "node ../../../scripts/release.js minor $(pwd)",
    "release:patch": "node ../../../scripts/release.js patch $(pwd)",
    "release": "node ../../../scripts/release.js patch $(pwd)",
    "release:custom": "node ../../../scripts/release.js custom $(pwd)",
    "swagger": "ts-node ../../../scripts/swagger.ts",
    "migration:generate": "node ../../../scripts/generate-migration.js $(pwd)",
    "db:migrate": "node scripts/run-migrations.js",
    "migration:revert": "node migration:revert -d migrations/DataSource.js",
    "docker-compose:reset": "docker-compose -f ../../../docker-compose.yaml down -v && yarn docker-compose:rebuild",
    "docker-compose:up": "docker-compose -f ../../../docker-compose.yaml up -d $(docker-compose -f ../../../docker-compose.yaml config --services | grep -v auth-service)",
    "docker-compose:build": "docker-compose -f ../../../docker-compose.yaml build auth-service",
    "docker-compose:rebuild": "docker-compose -f ../../../docker-compose.yaml build --no-cache auth-service",
    "docker-compose:stop": "docker-compose -f ../../../docker-compose.yaml stop",
    "docker:up": "docker run auth-service",
    "docker:cache:clean": "rm -rf node_modules package-lock.json",
    "docker:build": "docker build -f ./Dockerfile -t auth-service ../../..",
    "docker:build:force": "yarn docker:cache:clean && yarn docker:build",
    "docker:rebuild": "docker build --no-cache -t auth-service .",
    "service-restart": "yarn clean && yarn && yarn build && yarn start",
    "rebuild": "docker compose build auth-service --no-cache",
    "restart": "docker compose up -d auth-service",
    "b": "yarn clean && yarn && yarn rebuild",
    "service-start": "yarn start",
    "r": "yarn service-restart",
    "l": "yarn start",
    "routes": "node ../../../scripts/scan-routes.js --show-method",
    "log": "docker compose logs -f auth-service"
  },
  "dependencies": {
    "@dike/common": "*",
    "@dike/communication": "*",
    "@dike/contracts": "*",
    "@dike/internal": "*",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/typeorm": "^11.0.0",
    "@types/nodemailer": "^6.4.17",
    "axios": "^1.13.3",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "nodemailer": "^7.0.5",
    "nunjucks": "^3.2.4",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/common": "^11.1.12",
    "@nestjs/core": "^11.1.12",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/testing": "^11.1.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/errorhandler": "^1",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9",
    "@types/node": "^22.10.7",
    "@types/nunjucks": "^3",
    "@types/supertest": "^6.0.2",
    "child_process": "^1.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "path": "^0.12.7",
    "pg": "^8.15.6",
    "prettier": "^3.4.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-morph": "^25.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.20.0",
    "webpack": "^5.99.9"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
