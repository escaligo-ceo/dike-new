{
  "name": "@dike/web-site",
  "version": "0.1.18",
  "description": "",
  "author": "Tommaso Centurioni",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "init": "yarn init:dokcer",
    "init:docker": "cp .env.docker .env",
    "init:example": "cp .env.example .env",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist node_modules tsconfig.build.tsbuildinfo",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "yarn docker-compose:up && nest start --watch",
    "start:docker": "yarn docker-compose:up && yarn start:dev",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "yarn docker-compose:up $(docker-compose -f ../../../docker-compose.yaml config --services | grep -v web-site) && jest --config ./test/jest-e2e.json",
    "test:all": "yarn test:e2e && yarn test",
    "release:major": "node ../../../scripts/release.js major $(pwd)",
    "release:minor": "node ../../../scripts/release.js minor $(pwd)",
    "release:patch": "node ../../../scripts/release.js patch $(pwd)",
    "release": "node ../../../scripts/release.js patch $(pwd)",
    "release:custom": "node ../../../scripts/releaseCustom.js $(pwd)",
    "swagger": "ts-node ../../../scripts/swagger.ts",
    "docker-compose:reset": "docker-compose -f ../../../docker-compose.yaml down -v && yarn docker-compose:rebuild",
    "docker-compose:up": "docker-compose -f ../../../docker-compose.yaml up -d $(docker-compose -f ../../../docker-compose.yaml config --services | grep -v web-site)",
    "docker-compose:build": "docker-compose -f ../../../docker-compose.yaml build web-site",
    "docker-compose:rebuild": "docker-compose -f ../../../docker-compose.yaml build --no-cache web-site",
    "docker-compose:stop": "docker-compose -f ../../../docker-compose.yaml stop",
    "docker:build": "docker build -f ./Dockerfile -t web-site ../../..",
    "docker:start": "docker start -f ./Dockerfile -t web-site ../../..",
    "docker:rebuild": "docker build --no-cache -t web-site .",
    "service-restart": "yarn clean && yarn && yarn build && yarn start",
    "rebuild": "docker compose build web-site --no-cache",
    "restart": "docker compose up -d web-site",
    "b": "yarn clean && yarn && yarn rebuild",
    "service-start": "yarn start",
    "r": "yarn service-restart",
    "l": "yarn start",
    "routes:print": "node ../../../scripts/print-routes.js",
    "log": "docker compose logs -f web-site"
  },
  "dependencies": {
    "@dike/common": "*",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/serve-static": "^5.0.3",
    "cookie-parser": "^1.4.7",
    "csurf": "^1.11.0",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "keycloak-connect": "^26.1.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/cookie-parser": "^1.4.9",
    "@types/csurf": "^1",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "jest-changed-files": "^30.0.5",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.20.0",
    "webpack": "^5.99.9"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
